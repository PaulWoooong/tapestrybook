    <body>
    	<t:form>
		    <t:radiogroup value="gender">
		    	<t:loop source="values" value="currentElement">
		    		<t:label for="radio" />
		     		<t:radio t:id="radio" value="prop:currentElement" label="prop:label"/>
		     	</t:loop>
		    </t:radiogroup>
		    
		    <br/>
		    
		    <input type="submit" value="Send"/>
    	</t:form>
    </body>
</html>

